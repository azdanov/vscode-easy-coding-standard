{
  "name": "vscode-easy-coding-standard",
  "displayName": "EasyCodingStandard",
  "description": "Easiest way to start using PHP-CS-Fixer and PHP_CodeSniffer with 0-knowledge.",
  "version": "1.2.0",
  "publisher": "azdanov",
  "license": "MIT",
  "homepage": "https://github.com/azdanov/vscode-easy-coding-standard",
  "bugs": {
    "url": "https://github.com/azdanov/vscode-easy-coding-standard/issues",
    "email": "azdanov@pm.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azdanov/vscode-easy-coding-standard.git"
  },
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "PHP",
    "EasyCodingStandard"
  ],
  "scripts": {
    "build": "npm run compile",
    "ci:coverage": "run-s test:coverage codecov",
    "clean": "rimraf out",
    "codecov": "codecov",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "compile": "tsc -p ./",
    "cz": "git-cz",
    "postinstall": "run-p vscode:install",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:install": "run-s test:install-composer test:install-fixtures",
    "test:install-composer": "sh composer.sh",
    "test:install-fixtures": "php composer.phar install -d ./src/main/__fixtures__",
    "test:integration": "run-s compile vscode:test",
    "vscode:install": "node ./node_modules/vscode/bin/install",
    "vscode:prepublish": "npm run build",
    "vscode:test": "node ./node_modules/vscode/bin/test",
    "watch": "tsc -watch -p ./",
    "semantic-release": "semantic-release"
  },
  "activationEvents": [
    "workspaceContains:**/*.php"
  ],
  "icon": "assets/elephant.png",
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.ecs-check",
        "category": "EasyCodingStandard",
        "title": "Check file"
      },
      {
        "command": "extension.ecs-fix",
        "category": "EasyCodingStandard",
        "title": "Fix file"
      },
      {
        "command": "extension.ecs-version",
        "category": "EasyCodingStandard",
        "title": "Version info"
      },
      {
        "command": "extension.ecs-check-folder",
        "title": "EasyCodingStandard: Check folder"
      },
      {
        "command": "extension.ecs-fix-folder",
        "title": "EasyCodingStandard: Fix folder"
      },
      {
        "command": "extension.ecs-check-file",
        "title": "EasyCodingStandard: Check file"
      },
      {
        "command": "extension.ecs-fix-file",
        "title": "EasyCodingStandard: Fix file"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.ecs-version",
          "when": "editorIsOpen"
        },
        {
          "command": "extension.ecs-check",
          "when": "editorLangId == php"
        },
        {
          "command": "extension.ecs-fix",
          "when": "editorLangId == php"
        },
        {
          "command": "extension.ecs-check-folder",
          "when": "false"
        },
        {
          "command": "extension.ecs-fix-folder",
          "when": "false"
        },
        {
          "command": "extension.ecs-check-file",
          "when": "false"
        },
        {
          "command": "extension.ecs-fix-file",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.ecs-check-folder",
          "when": "explorerResourceIsFolder",
          "group": "z_commands"
        },
        {
          "command": "extension.ecs-fix-folder",
          "when": "explorerResourceIsFolder",
          "group": "z_commands"
        },
        {
          "command": "extension.ecs-check-file",
          "when": "resourceLangId == php",
          "group": "z_commands"
        },
        {
          "command": "extension.ecs-fix-file",
          "when": "resourceLangId == php",
          "group": "z_commands"
        }
      ]
    },
    "configuration": {
      "title": "PHP EasyCodingStandard",
      "type": "object",
      "properties": {
        "ecs.enable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Controls whether ecs is enabled or not."
        },
        "ecs.executablePath": {
          "scope": "resource",
          "type": "string",
          "default": "vendor/bin/ecs",
          "description": "The path to the ecs executable"
        },
        "ecs.configPath": {
          "scope": "resource",
          "type": [
            "string"
          ],
          "default": "easy-coding-standard.yml",
          "description": "The path to the configuration file"
        },
        "ecs.ruleSet": {
          "scope": "resource",
          "type": [
            "string"
          ],
          "enum": [
            "",
            "array",
            "clean-code",
            "comments",
            "common",
            "control-structures",
            "docblock",
            "namespaces",
            "php70",
            "php71",
            "phpunit",
            "psr2",
            "psr12",
            "spaces",
            "strict",
            "symfony",
            "symfony-risky",
            "symplify"
          ],
          "default": [
            "psr2"
          ],
          "description": "Select a prepared set of rules"
        }
      }
    }
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.5",
    "@types/execa": "^0.9.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "all-contributors-cli": "^5.4.1",
    "codecov": "^3.1.0",
    "commitizen": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.12.1",
    "semantic-release-vsce": "^2.1.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.16.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.1.6",
    "vscode": "^1.1.21"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "prettier --write",
        "tslint",
        "git add"
      ],
      "*.{js,json,md,yml,yaml}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.min.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": [
      "semantic-release-vsce",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "semantic-release-vsce",
        "packageVsix": "vscode-easy-coding-standard.vsix"
      },
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "publish": [
      "semantic-release-vsce",
      {
        "path": "@semantic-release/github",
        "assets": "vscode-easy-coding-standard.vsix"
      }
    ],
    "success": [
      "@semantic-release/github"
    ],
    "npmPublish": false,
    "branch": "master"
  },
  "dependencies": {
    "execa": "^1.0.0"
  }
}
